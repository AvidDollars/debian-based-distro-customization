RED_COLOR="\[\033[31m\]"
GREEN_COLOR="\[\033[32m\]"
BRACKET_COLOR="\[\033[37m\]"
CLOCK_COLOR="\[\033[33m\]"
JOB_COLOR="\[\033[32m\]"
PATH_COLOR="\[\033[33m\]"
LINE_BOTTOM="\342\224\200"
LINE_BOTTOM_CORNER="\342\224\224"
LINE_COLOR="\[\033[38;5;248m\]"
LINE_STRAIGHT="\342\224\200"
LINE_UPPER_CORNER="\342\224\214"
END_CHARACTER="|"

tty -s && export PS1="$LINE_UPPER_CORNER$BRACKET_COLOR[$CLOCK_COLOR\t$BRACKET_COLOR]$BRACKET_COLOR[jobs: $JOB_COLOR\j$BRACKET_COLOR]$BRACKET_COLOR[\H:\]$PATH_COLOR\w$BRACKET_COLOR][\$(if [ \$? == 0 ]; then echo exit:$GREEN_COLOR 0; else echo exit:$RED_COLOR non-zero;fi)$BRACKET_COLOR]\n$LINE_COLOR$LINE_BOTTOM_CORNER$END_CHARACTER\[$(tput sgr0)\] "
